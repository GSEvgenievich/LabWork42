<Window x:Class="Task3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <MediaElement MediaEnded="mediaElement_MediaEnded" x:Name="mediaElement" LoadedBehavior="Play" UnloadedBehavior="Manual" Stretch="Fill"/>
        <DockPanel VerticalAlignment="Bottom" HorizontalAlignment="Center">
            <Button x:Name="fileSoundButton" Content="Play Sound from files" Click="FileSoundButton_Click" Margin="0 0 10 0"/>
            <Button x:Name="systemSoundButton" Content="Play Sound from System" Click="SystemSoundButton_Click"/>
        </DockPanel>
    </Grid>
</Window>
